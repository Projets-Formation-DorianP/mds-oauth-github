{% set logged = is_granted('IS_AUTHENTICATED_FULLY') %}

<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}TP OAuth{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootswatch@4.5.2/dist/cosmo/bootstrap.min.css" integrity="sha384-5QFXyVb+lrCzdN228VS3HmzpiE7ZVwLQtkt+0d9W43LQMzz4HBnnqvVxKg6O+04d" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer" />

        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-light shadow-sm mb-5 bg-dark">
            <a class="navbar-brand pr-3" href="/">
                <i class="fa-solid fa-laptop-code"></i>&nbsp;
                TP OAuth
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                {% if logged %}
                    <ul class="navbar-nav">
                        <!--
                        <li class="nav-item {%if app.request.pathinfo == '/page1' %}active{% endif %}">
                            <a class="nav-link" href="/page1">Page 1</a>
                        </li>
                        <li class="nav-item {%if app.request.pathinfo == '/page2' %}active{% endif %}">
                            <a class="nav-link" href="/page2">Page 2</a>
                        </li>
                        <li class="nav-item {%if app.request.pathinfo == '/page3' %}active{% endif %}">
                            <a class="nav-link" href="/page3">Page 3</a>
                        </li>
                        <li class="nav-item {%if app.request.pathinfo == '/page4' %}active{% endif %}">
                            <a class="nav-link" href="/page4">Page 4</a>
                        </li>
                        -->
                        <li class="nav-item {%if app.request.pathinfo == '/detail' %}active{% endif %}">
                            <a class="nav-link" href="/detail">
                                <i class="fa-solid fa-user"></i>&nbsp;
                                Mes informations
                            </a>
                        </li>
                        <li class="nav-item {%if app.request.pathinfo == '/activity' %}active{% endif %}">
                            <a class="nav-link" href="/activity">
                                <i class="fa-solid fa-clock-rotate-left"></i>&nbsp;
                                Mon activité
                            </a>
                        </li>
                        <li class="nav-item d-lg-none">
                            <a class="nav-link text-danger" href="/logout">
                                <i class="fa-solid fa-arrow-right-from-bracket"></i>&nbsp;
                                Se déconnecter
                            </a>
                        </li>
                    </ul>
                    <div class="navbar-avatar d-none d-lg-block" style="margin-left:auto;">
                        <a href="/logout" data-toggle="tooltip" data-placement="bottom" title="{{ app.user.firstname }} {{ app.user.lastname }}">
                            <img class="rounded-circle" height="38" width="38"
                                {% if app.user.avatar is defined and app.user.avatar is not null %}
                                    src="{{ app.user.avatar }}"
                                {% else %}
                                    src=""
                                {% endif %}
                            alt="">
                        </a>
                    </div>
                {% else %}
                    <ul class="navbar-nav">
                        <li class="nav-item d-lg-none">
                            <a class="nav-link" href="/register">
                                <i class="fa-solid fa-pencil"></i>&nbsp;
                                S'inscrire
                            </a>
                        </li>
                        <li class="nav-item d-lg-none">
                            <a class="nav-link text-success" href="/login">
                                <i class="fa-solid fa-arrow-right-to-bracket"></i>&nbsp;
                                Se connecter
                            </a>
                        </li>
                    </ul>
                {% endif %}
            </div>
        </nav>
        {% block body %}{% endblock %}
        <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.9.2/umd/popper.min.js" integrity="sha512-2rNj2KJ+D8s1ceNasTIex6z4HWyOnEYLVC3FigGOmyQCZc2eBXKgOxQmo3oKLHyfcj53uz4QMsRCWNbLd32Q1g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.min.js" integrity="sha384-VHvPCCyXqtD5DqJeNxl2dtTyhF78xXNXdkwX1CZeRusQfRKp+tA7hAShOK/B/fQ2" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
        <script>
            $(function () {
                $('[data-toggle="tooltip"]').tooltip();
            })
        </script>
    </body>
</html>
